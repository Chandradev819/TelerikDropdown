@page "/"
@namespace TelerikDropdown.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TelerikDropdown</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    
    	<link href="https://blazor.cdn.telerik.com/blazor/4.0.0/kendo-theme-default/swatches/default-ocean-blue.css" rel="stylesheet" type="text/css" />
	<script src="https://blazor.cdn.telerik.com/blazor/4.0.0/telerik-blazor.min.js" defer></script>
    <script>
        var autoSaveTimer;

        function startAutoSave() {
            autoSaveTimer = setInterval(function () {
                DotNet.invokeMethodAsync('TelerikDropdown', 'SaveEmployee');
            }, 10000); // Auto-save every 5 seconds (adjust as needed).
        }

        function stopAutoSave() {
            clearInterval(autoSaveTimer);
        }
    </script>

</head>
<body class="k-body">
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
</body>
</html>